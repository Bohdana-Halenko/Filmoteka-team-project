{{#each this }}
<li class="gallery-card" id="{{id}}">
    {{#if poster_path}} <img class="card-img" src='https://image.tmdb.org/t/p/w300{{poster_path}}' loading="lazy"
        alt='Film {{title}} poster' />
    {{else}}
    <img class="card-img" src='../images/no-poster.png' loading="lazy" alt='Film {{title}} poster' />
    {{/if}}

    <div class="card-info">
        <h2 class="card-title"> {{title}} </h2>
        <p class="card-genre"> {{#if genre_ids}}{{genre_ids}}{{/if}}{{#if genres}}{{genres}}{{/if}} </p>
        {{#if release_date}}
        <p class="card-release-year"> {{release_date}} </p>
        {{/if}}
        {{#if vote_average}}
        <p class="card-raiting card-raiting--bg">
            {{vote_average}}
        </p>
        {{/if}}
    </div>

</li>
{{/each}}