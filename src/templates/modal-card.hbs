<div class="modal__backdrop"></div>

<div class="modal__container">

    <button class="close-button">
        <span class="close"></span>
    </button>
    
    <div class="modal__content">
        
        <div class="film__poster">

            {{#if data.poster_path}}
            <img class="film__image" src="https://www.themoviedb.org/t/p/w500{{data.poster_path}}"
                alt="{{data.title}}"/>
            {{/if}}
            {{#unless data.poster_path}}
            <img class="film__noposter" src="https://images.unsplash.com/photo-1634157703702-3c124b455499?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1528&q=80"
                alt="{{data.title}}">
            {{/unless}}
             
        </div>

        <div class="film__decription">

            <h1 class="film__title">{{data.title}}</h1>

                <div class="grid-container">

                    <p class="film__info">Vote / Votes</p>
                    <div class="film__value">
                        <span class="film__vote film__vote--orange">{{data.vote_average}}</span>
                        <span>/</span>
                        <span class="film__vote">{{data.vote_count}}</span>
                    </div>

                    <p class="film__info ">Popularity</p>
                    <span class="film__value">{{data.popularity}}</span>
                
                    <p class="film__info">Original title</p>
                    <span class="film__original">{{data.original_title}}</span>
                
                    <p class="film__info">Genre</p>
                        <ul class="film__value">
                            {{#each genresCut}}
                            <li>{{this.name}}</li>
                            {{/each}}
                        </ul>

                </div>        
                    
            <h2 class="film__about">About</h2>
            <span class="film__overview">{{data.overview}}</span>

            <button type="button" class=" film__button btn__trailer">
                <svg width='40' height='40'class='youtube-icon' viewBox='0 -77 512.00213 512' >
